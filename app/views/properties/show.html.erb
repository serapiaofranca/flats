<dl>
    <dt> Propriedade:</dt><dd><h3><%=  @property.title %></h3></dd>
    <dt> Descrição:</dt><dd><%=  @property.description %></dd>
    <dt> Quartos:</dt>
    <dd><%=  @property.rooms %></dd>
    <dt> Banheiros: </dt><dd><%=  @property.bathrooms %></dd>
    <dt> Aceita Pets:</dt>
    <% if @property.pets? %>
        <dd>Sim</dd>
    <% else%>
        <dd>Não</dd>
    <% end %>
     <dt> Diária:</dt><dd><%= number_to_currency(@property.daily_rate, unit: 'R$', separator: ',', format: '%u %n') %></dd>
</dl>

