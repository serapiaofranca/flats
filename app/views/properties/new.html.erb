<h3>Cadastro de Imóvel</h1>

<%= form_with(model: Property.new) do |f| %>
    <div>
        <%= f.label :title, 'Título' %>
        <%= f.text_field :title %>
    </div>
    <div>    
        <%= f.label :description, 'Descrição' %>
        <%= f.text_field :description %>
    </div>
    <div>
        <%= f.label :rooms, 'Quartos' %>
        <%= f.text_field :rooms %>
    </div>
    <div>
        <%= f.label :bathrooms, 'Banheiros' %>
        <%= f.text_field :bathrooms %>
    </div>
    <div>
        <%= f.label :daily_rate, 'Diária' %>
        <%= f.text_field :daily_rate %>
    </div>
    <div>
        <%= f.label :pets, 'Aceita pets?' %>
        <%= f.check_box :pets %>
    </div>
    <div>
        <%= f.label :parking_slot, 'Possui vaga para estacionar?' %>
        <%= f.check_box :parking_slot %>
    </div>
    <%= f.submit 'Enviar' %>
<% end %>